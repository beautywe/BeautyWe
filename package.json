{
  "name": "beautywejs",
  "version": "2.0.0",
  "description": "Write beautiful code for wechat mini app by the beautiful we !",
  "main": "dist/index.js",
  "scripts": {
    "test": "scripty",
    "test:lint": "scripty",
    "test:unit": "scripty",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"packages/**/*.ts\" --write",
    "fix:lint": "eslint packages --ext .ts --fix",
    "lint": "run-s test:lint",
    "cov": "jest --coverage --coverageDirectory=../coverage && open-cli coverage/lcov-report/index.html ",
    "commitmsg": "validate-commit-msg",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "commit": "git cz"
  },
  "scripty": {
    "path": "./scripts/project"
  },
  "keywords": [
    "beautywe"
  ],
  "pre-commit": [
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beautywe/beautywe.git"
  },
  "bugs": {
    "url": "https://github.com/beautywe/beautywe/issues"
  },
  "homepage": "https://github.com/beautywe/beautywe#readme",
  "author": "JerryC8080 (huangjerryc@gmail.com)",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/wechat-miniprogram": "^3.4.0",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "commitizen": "^3.0.5",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "jest": "^27.2.1",
    "lerna": "^4.0.0",
    "lodash": "^4.17.11",
    "npm-run-all": "^4.1.5",
    "open-cli": "^7.0.1",
    "pre-commit": "^1.2.2",
    "prettier": "^2.4.1",
    "scripty": "^2.0.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typedoc": "^0.22.4",
    "typescript": "^4.4.3",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true
  }
}
